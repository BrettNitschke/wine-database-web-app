extends layout

block content
  .container
    form.form-signin(role='form', action="/addWine",method="post", style='max-width: 300px;')
      h2.form-signin-heading Add a Wine
      input.form-control(type='text', name="winery", placeholder='Winery Name')
      input.form-control(type='text', name="name", placeholder='Wine Name')
      input.form-control(type='text', name="vintage", placeholder='Vintage')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Add Wine
